{
  "$schema": "https://opencode.ai/config.json",
  "theme": "sebita",
  "autoupdate": true,
  "permission": {
    "bash": {
      "*": "allow",
      "git commit *": "ask",
      "git push *": "ask",
      "git push": "ask",
      "git push --force *": "ask",
      "git rebase *": "ask",
      "git reset --hard *": "ask"
    },
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "**/.env": "deny",
      "**/.env.*": "deny",
      "**/secrets/**": "deny",
      "**/credentials.json": "deny"
    }
  },
  "tui": {
    "scroll_speed": 1,
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "enabled": true
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@playwright/mcp@latest"
      ],
      "enabled": true
    }
  },
  "agent": {
    "sebastian": {
      "mode": "primary",
      "description": "Reviews code for best practices and potential issues as the sebastian",
      "temperature": 0.1,
      "prompt": "{file:./prompts/sebastian.txt}",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "webfetch": true,
        "git": true
      },
      "permissions": {
        "edit": "allow",
        "webfetch": "allow",
        "git": "ask",
        "bash": "ask"
      },
      "instructions": [
        "~/.config/opencode/security_rules.md"
      ]
    },
    "mimasoft": {
      "mode": "primary",
      "description": "Assists the primary agent by providing additional insights and suggestions as the mimasoft",
      "temperature": 0.1,
      "prompt": "{file:./prompts/mimasoft.txt}",
      "tools": {
        "write": true,
        "edit": true,
        "read": true
      },
      "instructions": [
        "~/.config/opencode/security_rules.md"
      ]
    }
  }
}
